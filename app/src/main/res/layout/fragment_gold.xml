<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mobstac.thehindubusinessline.view.LatoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_update_date"
        android:paddingLeft="10dp"
        android:paddingBottom="4dp"
        android:paddingTop="5dp"
        android:textColor="@color/sensexFullTextColor"
        android:textSize="12sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@color/forex_background_color"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <com.mobstac.thehindubusinessline.view.LatoBoldTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/forex_background_color"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/today_rate"
            android:textColor="@color/forex_header_text_color"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>


    <com.mobstac.thehindubusinessline.view.ProgressView
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/forex_background_color"
                android:orientation="horizontal"
                android:padding="21dp">

                <com.mobstac.thehindubusinessline.view.LatoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Commodity"
                    android:textColor="@color/forex_header_text_color"
                    android:textSize="14sp" />

                <com.mobstac.thehindubusinessline.view.LatoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Value"
                    android:textColor="@color/forex_header_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/forex_row_background_second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/forex_background_color"
                android:orientation="horizontal"
                android:padding="21dp">

                <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gold(10g)"
                    android:textColor="@color/forex_text_color"
                    android:textSize="14sp" />

                <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
                    android:id="@+id/goldValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/forex_text_color"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/forex_row_background_second"
                android:orientation="horizontal"
                android:padding="21dp">

                <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Silver(1Kg)"
                    android:textColor="@color/forex_text_color"
                    android:textSize="14sp" />

                <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
                    android:id="@+id/silverValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/forex_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

