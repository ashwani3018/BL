<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widget_paddingBottom"
        android:paddingTop="@dimen/widget_paddingTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/banner_title_margin"
            android:orientation="horizontal">

            <View
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/section_marker" />

            <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
                android:id="@+id/textview_widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:textColor="@color/color_banner_text"
                android:textSize="15sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_widgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_paddingBottom" />

        <com.mobstac.thehindubusinessline.view.LatoRegularTextView
            android:id="@+id/textview_widget_viewAll"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/widget_paddingTop"
            android:drawableRight="@drawable/back_more_from"
            android:gravity="center_vertical"
            android:text="@string/info_widget_viewall"
            android:textAllCaps="true"
            android:textColor="@color/widget_viewall"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>