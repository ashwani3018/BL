<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_home_widget_background"
    android:fillViewport="true"
    tools:context="com.mobstac.thehindubusinessline.fragments.PostCommentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/color_home_widget_background"
                android:orientation="vertical">

                <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_home_widget_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/hint_name"
                    android:textColor="@color/text_warm_grey"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/drawable_comment_edittext"
                    android:gravity="center_vertical"
                    android:inputType="textCapWords"
                    android:padding="5dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color_comment_text" />

                <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_home_widget_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/hint_email"
                    android:textColor="@color/text_warm_grey"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/drawable_comment_edittext"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color_comment_text" />

                <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_home_widget_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/hint_comment_message"
                    android:textColor="@color/text_warm_grey"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_home_widget_background"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_static_text" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/post_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn"
            android:padding="10dp"
            android:text="@string/postcomment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>
</ScrollView>
