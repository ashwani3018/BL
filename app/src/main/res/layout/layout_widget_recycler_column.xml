<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout_widget"
        android:layout_width="@dimen/widget_recyclerView_column_width"
        android:layout_height="@dimen/widget_item_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_widget_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_recyclerView_image_height"
            android:src="@mipmap/ph_toppicks_th" />

        <com.mobstac.thehindubusinessline.view.LatoSemiBoldTextView
            android:id="@+id/textview_widget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/widget_recyclerView_text_margin"
            android:layout_marginRight="@dimen/widget_recyclerView_text_margin"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/text_line_spacing"
            android:maxLines="3"
            android:minLines="3"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/article_list_text"
            android:textSize="@dimen/widget_recyclerView_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>