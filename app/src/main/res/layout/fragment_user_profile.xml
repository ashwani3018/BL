<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_profile_background"
    tools:context="com.mobstac.thehindubusinessline.fragments.UserProfileFragment">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/parentCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.mobstac.thehindubusinessline.view.LatoRegularTextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4sp"
            android:text="Your Profile Details"
            android:textColor="#818181"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/profile_info_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_text"
            card_view:cardBackgroundColor="@color/user_profile_card"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:paddingLeft="16dp"
                        android:text="Name"
                        android:textColor="#818181"
                        android:textSize="16sp" />

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textColor="@color/color_black_in_day_white_in_night"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:paddingLeft="16dp"
                        android:text="Email"
                        android:textColor="#818181"
                        android:textSize="16sp" />

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textColor="@color/color_black_in_day_white_in_night"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:paddingLeft="16dp"
                        android:text="Mobile"
                        android:textColor="#818181"
                        android:textSize="16sp" />

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textColor="@color/color_black_in_day_white_in_night"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:paddingLeft="16dp"
                        android:text="Gender"
                        android:textColor="#818181"
                        android:textSize="16sp" />

                    <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textColor="@color/color_black_in_day_white_in_night"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_info_cardview"
            card_view:cardBackgroundColor="@color/user_profile_card"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true">

            <com.mobstac.thehindubusinessline.view.LatoRegularTextView
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:drawableRight="@drawable/next_nm"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:text="Change Password"
                android:textColor="@color/color_black_in_day_white_in_night"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/logout_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/drawable_fill_blue"
            android:text="Log Out"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>
</FrameLayout>