<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_explore_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_explore_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/explore_column_image_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/ph_exploresections_th" />

        <com.mobstac.thehindubusinessline.view.LatoRegularTextView
            android:id="@+id/textview_explore_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_margin="@dimen/explore_column_text_padding"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/color_banner_text"
            android:textSize="12sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>